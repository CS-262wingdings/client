<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/standard"
    android:background="@color/pigeonPollGold"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".YouWin">

    <TextView
        android:id="@+id/header1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Round finished"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/winners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/anotherRound"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@drawable/border"
        android:onClick="newRound"
        android:text="Play Another Round"
        android:textStyle="bold" />

    <Button
        android:id="@+id/conformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:onClick="confirm"
        android:text="back to main menu"
        android:textStyle="bold" />

</LinearLayout>